{
  "name": "vs-winter-lang-tools",
  "displayName": "VS Winter Lang Checker",
  "description": "Une extension pour vérifier et mettre à jour les fichiers de langue dans les projets Winter CMS",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vs-winter-lang-tools.analyzeCode",
        "title": "Analyser le code"
      }
    ],
    "configuration": {
      "title": "VS Winter Lang Checker",
      "properties": {
        "vs-winter-lang-tools.dirsToAnalyze": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["plugins/waka/worder"],
          "description": "Répertoires à analyser"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "path": "^0.12.7"
  }
}
